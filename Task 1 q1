#include<iostream>
using namespace std;

int main(){
int x, y, z, t;
x=sizeof(int);
y=sizeof(char);
z=sizeof(float);
t=sizeof(double);
cout<< "size of int:"<<x <<" byte"<<"\n";
cout<< "size of char:"<<y <<" byte"<<"\n";
cout<< "size of float:"<<z <<" byte"<<"\n";
cout<< "size of double:"<<t<<" byte";
return 0;
}
